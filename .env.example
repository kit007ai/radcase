# RadCase Environment Variables
# Copy this file to .env and fill in your actual values

# CRITICAL: JWT Secret for token signing
# Generate a strong secret with: openssl rand -hex 32
# NEVER use the fallback in production!
JWT_SECRET=your-super-secure-jwt-secret-here-replace-with-openssl-rand-hex-32

# Database
DATABASE_PATH=./radcase.db

# Server Configuration  
PORT=3001
NODE_ENV=development

# AI Configuration (optional)
ANTHROPIC_API_KEY=your-anthropic-key-here
OPENAI_API_KEY=your-openai-key-here

# File Upload Limits
MAX_FILE_SIZE_MB=50
MAX_DICOM_FILE_SIZE_MB=500

# Security
DISABLE_DIRECTORY_LISTING=true
REQUIRE_AUTH_FOR_UPLOADS=true